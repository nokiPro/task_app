<h1>タスク一覧</h1>
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel card" style="width: 45%; margin: 10px; padding: 10px">
        <h4 class="list-group-item-success"><%= blog.title%></h4>
        <p>期限：</p>
        <p>担当者：</p>
        <p>ステータス：</p>
        <div class="blog-links">
          <%= link_to 'Show', blog, class: 'btn btn-default' %>
          <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info' %> |
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
