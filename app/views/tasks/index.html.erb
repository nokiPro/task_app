<h1>タスク一覧</h1>
<div class="row">
  <% @tasks.each do |task| %>
    <% if task.user_id == current_user.id %>
      <div class="card border-danger mt-lg-3 mt-sm-5 col-sm-12 col-lg-5" style="padding: 0" >
    <% else %>
      <div class="card border-success mt-lg-3 mt-sm-5 col-sm-12 col-lg-5" style="padding: 0" >
    <% end %>
      <% if task.user_id == current_user.id %>
        <div class="card-header" style="background-color: rgb(247, 185, 183);">
      <% else %>
        <div class="card-header" style="background-color: rgb(169, 224, 169);">
      <% end %>
          <p><%= task.title %><p>
        </div>
        <div class="card-body">
          <p>担当者：<%= task.user.name %><p>
          <p>期限：<%= task.deadline.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          <p>ステータス：<%= @status[task.status]%></p>
          <div class="form-group">
            <%= link_to '詳細', task_path(task), class: 'btn btn-secondary text-white col-3' %>
            <% if task.user_id == current_user.id %>
              <%= link_to '編集', edit_task_path(task), class: 'btn btn-primary text-white col-3' %>
              <%= button_to '削除', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-white col-3', style: "display: inline-block;"%>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>
