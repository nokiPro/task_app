<h1>タスク詳細</h1>
<div class="justify-content-center ">
  <div class="card border-success mt-lg-3 mt-sm-5 col-sm-12 col-lg-5" style="padding: 0" >
      <div class="card-body">
        <p><%= @task.title %><p>
        <p>担当者：<p>
        <p>期限：<%= @task.deadline.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
        <p>ステータス：</p>
        <div>
          <%= link_to '編集', "edit_task_path(@task)", class: 'btn btn-outline-primary' %>
          <%= link_to 'アサイン', "@task", class: 'btn btn-outline-success' %>
        </div>
      </div>
    </div>
</div>
