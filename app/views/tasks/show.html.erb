<h1>タスク詳細</h1>
<div class="row g-0">
  <div class="col-md-12 bg-light">
    <div class="card-body">
      <h2 class="card-name"><%= @task.title %></h2>
      <p class="card-text"><%= @task.content %></p>
      <p class="card-text">期限：<%= @task.deadline.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
      <p class="card-text">担当者：<%= @task.user.name %></p>
      <p class="card-text">ステータス：<%= @status[@task.status]%></p>
      <div>
        <% if @task.user_id == current_user.id %>
          <%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary text-white' %>
          <%= link_to 'アサイン', tasks_asign_path(id: @task.id), class: 'btn btn-success text-white' %>
          <%= button_to '削除', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'd-inline btn btn-danger text-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
